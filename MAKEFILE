TARGET = MAIN

SRCS = MAIN.CPP _SCENE1.CPP _SCENE2.CPP _SCENE3.CPP

SRCS += MUSEUM\SRC\ACTOR.CPP
SRCS += MUSEUM\SRC\DIRECTOR.CPP
SRCS += MUSEUM\SRC\MUSEUM.CPP
SRCS += MUSEUM\SRC\SCREEN.CPP
SRCS += MUSEUM\SRC\SPRITE.CPP
SRCS += MUSEUM\SRC\SCENE.CPP
SRCS += MUSEUM\SRC\VEC.C

OPTIONS = /i=MUSEUM\INC /i=MUSEUM\DEPS

ALL: $(TARGET).EXE

$(OBJS): $(SRCS)
	WPP386 $(OPTIONS) $<

$(TARGET).EXE: $(OBJS)
	%WRITE $(TARGET).LNK NAME $@
	%WRITE $(TARGET).LNK SYSTEM DOS4G
	%WRITE $(TARGET).LNK FILE {$(OBJS)}
	WLINK  @$(TARGET).LNK

CLEAN: .SYMBOLIC
	@DEL *.OBJ 2> NUL
	@DEL $(TARGET).LNK 2> NUL
	@DEL $(TARGET).EXE 2> NUL
