TARGET = MAIN

OBJS = MAIN.OBJ _SCENE1.OBJ _SCENE2.OBJ _SCENE3.OBJ

OBJS += ACTOR.OBJ
OBJS += DIRECTOR.OBJ
OBJS += MUSEUM.OBJ
OBJS += SCREEN.OBJ
OBJS += SPRITE.OBJ
OBJS += SCENE.OBJ
OBJS += VEC.OBJ

OPTIONS = /5r /s /ox
OPTIONS += /i=.

ALL: $(TARGET).EXE

.C.OBJ:
	WPP386 $(OPTIONS) $<

.CPP.OBJ:
	WPP386 $(OPTIONS) $<

$(TARGET).EXE: $(OBJS)
	%WRITE $(TARGET).LNK NAME $@
	%WRITE $(TARGET).LNK SYSTEM DOS4G
	%WRITE $(TARGET).LNK FILE {$(OBJS)}
	WLINK  @$(TARGET).LNK

CLEAN: .SYMBOLIC
	@DEL *.OBJ 2> NUL
	@DEL $(TARGET).LNK 2> NUL
	@DEL $(TARGET).EXE 2> NUL
